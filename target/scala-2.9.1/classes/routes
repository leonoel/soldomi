# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                                          controllers.Application.index()
GET     /tunes/                                                                    controllers.Application.tunes()
POST    /tunes/fromnwc/                                                            controllers.Application.importNwc()
GET	/tunes/:id/                                                                controllers.Application.showTune(id: Long)

# Json
GET	/jsonapi/tunes/$id<[0-9]+>                                                 controllers.JsonApi.tuneInfo(id: Long)
GET 	/jsonapi/tunes/$tuneId<[0-9]+>/measures/$measurePosition<[0-9]+>           controllers.JsonApi.measureInfo(tuneId: Long, measurePosition: java.lang.Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
